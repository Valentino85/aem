<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    cq:showOnCreate="{Boolean}true"
    jcr:primaryType="nt:unstructured"
    jcr:title="Advanced"
    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
    <items jcr:primaryType="nt:unstructured">
        <column
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <section1
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Settings"
                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                    <items jcr:primaryType="nt:unstructured">
                        <language
                            granite:class="language"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            emptyText="Select"
                            fieldLabel="Language"
                            name="./jcr:language"
                            renderReadOnly="{Boolean}true"
                            translateOptions="{Boolean}true">
                            <granite:data
                                jcr:primaryType="nt:unstructured"
                                cq-msm-lockable="jcr:language"/>
                            <datasource
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/common/datasources/languages"
                                addNone="{Boolean}true"/>
                        </language>
                        <isLanguageRoot
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                            fieldDescription="Must be checked if page is the root of a language copy."
                            name="./cq:isLanguageRoot"
                            renderReadOnly="{Boolean}true"
                            text="Language Root"
                            value="true">
                            <granite:data
                                jcr:primaryType="nt:unstructured"
                                cq-msm-lockable="cq:isLanguageRoot"/>
                        </isLanguageRoot>
                        <redirect
                            cq:showOnCreate="{Boolean}true"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                            fieldLabel="Redirect"
                            name="./cq:redirectTarget"
                            rootPath="/content">
                            <granite:data
                                jcr:primaryType="nt:unstructured"
                                cq-msm-lockable="cq:redirectPath"/>
                        </redirect>
                        <designs
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="wcm/designer/gui/components/designfield"
                            fieldLabel="Design"
                            name="./cq:designPath"
                            renderReadOnly="{Boolean}true">
                            <granite:data
                                jcr:primaryType="nt:unstructured"
                                cq-msm-lockable="cq:designPath"/>
                        </designs>
                        <alias
                            cq:showOnCreate="{Boolean}true"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Alias"
                            name="./sling:alias"
                            renderReadOnly="{Boolean}true">
                            <granite:data
                                jcr:primaryType="nt:unstructured"
                                cq-msm-lockable="sling:alias"/>
                        </alias>
                    </items>
                </section1>
                <templates
                    cq:showOnCreate="{Boolean}false"
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Templates Settings"
                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                    <items jcr:primaryType="nt:unstructured">
                        <allowedtemplates
                            granite:class="foundation-layout-util-maximized-alt"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                            fieldDescription="Click 'Add Field' to add a template or a list of templates to be allowed as child pages. Each value in the list must be an absolute path to a template or use '/.*' to allow all templates below this path."
                            fieldLabel="Allowed Templates"
                            renderReadOnly="{Boolean}true">
                            <field
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                name="./cq:allowedTemplates"
                                renderReadOnly="{Boolean}true"/>
                        </allowedtemplates>
                    </items>
                </templates>
                <medalliaConfiguration
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Medallia page configuration (mobile settings only)"
                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                    <items jcr:primaryType="nt:unstructured">
                        <surveyFormId
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                cq:showOnCreate="{Boolean}true"
                                fieldDescription="Id of the survey form to show"
                                fieldLabel="Survey FormId"
                                value="10440"
                                name="./surveyFormId"
                                renderReadOnly="{Boolean}true"/>
                        <surveyTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                cq:showOnCreate="{Boolean}true"
                                fieldLabel="Survey Title"
                                name="./surveyTitle"
                                renderReadOnly="{Boolean}true"/>
                        <disableSurvey
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                cq:showOnCreate="{Boolean}true"
                                fieldDescription="Disable Medallia survey (Feedback) on this page"
                                name="./disableSurvey"
                                renderReadOnly="{Boolean}true"
                                text="Disable Medallia survey"
                                value="true">
                        </disableSurvey>
                    </items>
                </medalliaConfiguration>
            </items>
        </column>
    </items>
</jcr:root>
